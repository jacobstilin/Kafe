@model IList<KafeCruisers.Models.Size>

@{
    ViewBag.Title = "AddSizes";
}

<h2>Sizes</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <table class="table">
            <tr>
                <th>
                    <h4>Size</h4>
                </th>
                
                <th></th>
            </tr>

            @for (var i = 0; i < Model.Count(); i++)
            {
        <tr>
            <td>
                @Html.HiddenFor(modelItem => Model[i].SizeId)
                @Html.HiddenFor(modelItem => Model[i].MenuItemId)
            </td>
            <td>
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model[i].SizeName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(modelItem => Model[i].SizeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(modelItem => Model[i].SizeName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model[i].AdditionalCost, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(modelItem => Model[i].AdditionalCost, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(modelItem => Model[i].AdditionalCost, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>

        </tr>


            }
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}


