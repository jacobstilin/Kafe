@model IList<KafeCruisers.Models.MenuItem>

@{
    ViewBag.Title = "EditCreamers";
}
<style>
    input.form-control {
        width: 50%;
        float: right;
    }
    td {
        width: 50%;
    }
</style>
<h2>Creamer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    
    <table class="table">
        <tr>
            <th>
                <h4>Creamer</h4>
            </th>
            <th>
                <h4>Quantity</h4>
            </th>
            <th></th>
        </tr>

            @for (var i = 0; i < Model.Count(); i++)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model[i].Name)
                    @Html.HiddenFor(modelItem => Model[i].Name)
                    @Html.HiddenFor(modelItem => Model[i].Category)
                    @Html.HiddenFor(modelItem => Model[i].Price)
                </td>
                <td>
                    <div class="form-group">
                        
                        <div class="col-md-10">
                            @Html.EditorFor(modelItem => Model[i].Quantity, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => Model[i].Quantity, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>

            </tr>


        }
        </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>

</div>
}
