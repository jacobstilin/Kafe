@model KafeCruisers.Models.Order
@{
    ViewBag.Title = "UniqueIdScreen";
}

<h2>Thank you for your purchase!</h2>
@{ 
    var fillTime = Model.FillTime.ToString("h:mm tt");
}
<p>Your Order will be ready at @fillTime</p>

<p>Your Order ID is:</p>

<h2>@Model.UniqueId</h2>

<p>Please show this screen to a barista when picking up your order.</p>

