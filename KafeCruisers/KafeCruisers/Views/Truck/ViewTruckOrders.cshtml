@model IEnumerable<KafeCruisers.Models.Order>

@{
    ViewBag.Title = "ViewTruckOrders";
}

<style>
    a.button {
        padding: 0em 1.2em;
    }

    
</style>

<h2>View Truck Orders</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UniqueId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FillTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UniqueId)
    </td>
    <td>
        @{
            string startString = item.StartTime.ToString("h:mm tt");
        }
        @Html.DisplayFor(modelItem => startString)
    </td>
    <td>
        @{
            string fillString = item.FillTime.ToString("h:mm tt");
        }
        @Html.DisplayFor(modelItem => fillString)
    </td>
    <td>
        @{ var priceString = string.Format("{0:0.00}", item.OrderPrice); }
        $@Html.DisplayFor(model => priceString)
    </td>
    <td>
        @Html.ActionLink("View Order", "ViewOrderItems", new { id = item.OrderId }, new { @class = "button" })
    </td>
    <td>
        @Html.ActionLink("Order Filled", "OrderFilled", "Order", new { id = item.OrderId }, new { @class = "button" })
    </td>
</tr>
}

</table>

<td>
    @Html.ActionLink("Back To Truck List", "TruckSelector", "Truck", null, new { @class = "button" })
</td>
